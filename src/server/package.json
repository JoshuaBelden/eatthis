{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "This is a baseline api starter in typescript.",
  "main": "./dist/src/server.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "start": "npm run build && cross-env STAGE=local node --inspect ./dist/src/server.js",
    "lint": "tslint ./src/**/*.ts ./test/**/*.spec.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.spec.ts -t verbose",
    "test": "cross-env NODE_ENV=test mocha --reporter spec test/**/*.spec.ts ",
    "tsc": "tsc"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "api",
    "template",
    "TypeScript 3"
  ],
  "author": "Joshua C. Belden",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.4",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.8",
    "@types/node": "^12.12.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^6.0.3",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "build": "^0.1.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "guid-typescript": "^1.0.9",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongodb": "^3.3.3",
    "reflect-metadata": "^0.1.13"
  }
}
